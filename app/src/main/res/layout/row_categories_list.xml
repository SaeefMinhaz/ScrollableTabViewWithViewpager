<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/itemsCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/serviceItemRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/serviceItemImageIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/serviceItemTitleTV"
            android:layout_below="@+id/serviceItemImageIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Title"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/serviceItemPriceTextTV"
            android:layout_below="@+id/serviceItemTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starts from"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/serviceItemPriceTV"
            android:layout_below="@+id/serviceItemTitleTV"
            android:layout_toRightOf="@id/serviceItemPriceTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" à§³100"
            android:textSize="10sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>